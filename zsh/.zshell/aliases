# Git
alias gfrm='git fetch && git rebase origin/master'
alias gfrm='git fetch && git rebase origin/master'
alias gfrcb='git fetch && git rebase origin/$(current_branch)'
alias gl='git pull origin $(current_branch)'
alias gp='git push origin $(current_branch)'
alias gh='git rev-parse HEAD | tr -d "\n" | pbcopy; echo "Copied `git rev-parse HEAD`"'
alias glf='git fetch && git reset --hard origin $(current_branch)'
alias gmt='git mergetool'
alias grc='git rebase --continue'
alias gcf='git clean -f'

# Capistrano
alias cal='cap deploy:lock -S environment=production -S service=api'
alias cad='cap deploy -S environment=production -S service=api'
alias cadone='cap deploy:done -S environment=production -S service=api'
alias crl='cap deploy:lock -S environment=production -S service=reporting'
alias crd='cap deploy -S environment=production -S service=reporting'
alias crdone='cap deploy:done -S environment=production -S service=reporting'
alias csl='cap deploy:lock -S environment=production -S service=social'
alias csd='cap deploy -S environment=production -S service=social'
alias csdone='cap deploy:done -S environment=production -S service=social'
alias cwl='cap deploy:lock -S environment=production -S service=wrapport-api'
alias cwd='cap deploy -S environment=production -S service=wrapport-api'
alias cwdone='cap deploy:done -S environment=production -S service=wrapport-api'
alias cul='cap deploy:lock -S environment=production -S service=user-admin'
alias cud='cap deploy -S environment=production -S service=user-admin'
alias cudone='cap deploy:done -S environment=production -S service=user-admin'

# Misc
alias mr='mr -j 16'
alias test='pyclean .. && mr -j 16 run ./run_tests.py && terminal-notifier -message "Tests complete"'
alias ag='ag --ignore=assets/javascripts/zxcvbn.js'
alias mr-update='mr -j 16 run git checkout master; mr -j 16 update; mr -j 16 run git fetch'

# Redis
alias 'redis.start'='echo "redis starting"; /usr/local/bin/redis-server /usr/local/etc/redis.conf'
